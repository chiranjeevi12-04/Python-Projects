
# python calculator

num1 = float(input("enter the num1: "))
num2 = float(input("enter the num2: "))
operator = input("select the operator(+,-,*,/): ")
if operator == "+":
    print(num1+num2)
elif operator == "-":
    print(num1-num2)    
elif operator == "*":
    print(num1*num2)    
elif operator == "/":
    print(num1/num2)    
else:
    print(f"yuh enter a invalid operator")    





